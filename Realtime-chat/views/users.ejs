<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users</title>
    <link rel="stylesheet" href="users.css" />

    <!-- Font Awesome CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <h1>All Users</h1>
    <table>
      <thead>
        <tr>
          <th>User ID</th>
          <th>User Name</th>
          <th>User Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user._id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td class="actions">
            <form
              action="/edit/<%= user._id %>"
              method="GET"
              style="display: inline"
            >
              <button type="submit" class="edit">
                <i class="fas fa-edit"></i>
              </button>
            </form>
            <form
              action="/delete/<%= user._id %>"
              method="POST"
              style="display: inline"
            >
              <button type="submit" class="delete">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
